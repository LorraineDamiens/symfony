{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{programs.poster}}" alt="{{ programs.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ programs.title }}</h1>
            <p>{{ programs.summary }}</p>
            <p>Categorie : {{ programs.category.name }}</p>
            {% for s in season %}
                <a href="{{ path('show_season', {id: s.id}) }}">{{ s.description }}</a>
            {% endfor %}
        </br>
            <strong>Acteur :</strong>
            <ul>
                {% for actor in programs.actors %}
                    <a href="/actor/{{ (actor.name|replace({" ":"-"}) | title)|lower }}"> {{ actor.name }} </a>
                </br>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
        </div>
    </div>



    <a href="{{ path('index') }}">
        Retour à l'accueil
    </a>

{% endblock %}
